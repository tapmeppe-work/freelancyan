---
import Admin from "@bloc/Admin";
import Layout from "@layouts/Titler.astro";
import type Properties from "@layouts/ABCD.types";
import Columns from "@modules/services/Columns";
import Grid from "@modules/services/Grid";

const path = Admin.start(Astro as unknown as Properties, {
	category: "header",
	page: "services",
});
if(path) return Astro.redirect(path)
const services = Admin.lexicon.services;
---

<Layout>
	{services.mode == "grid" && <Grid catalogue={services.catalogue} />}
	{services.mode == "columns" && <Columns 
		headline={services.headline} 
		catalogue={services.catalogue} 
		flush={services.flush} 
	/>}
</Layout>
